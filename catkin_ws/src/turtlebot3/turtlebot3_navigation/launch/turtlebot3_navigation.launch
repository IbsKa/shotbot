<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="/home/pcnote73/shotbot/catkin_ws/src/turtlebot3/turtlebot3_navigation/maps/test1stefan.yaml.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="scan_topic"     default="scan_filtered"/>

  <node pkg="laser_filters" type="scan_to_scan_filter_chain" output="screen" name="shotbot_laser_filter">
      <rosparam command="load" file="$(find laser_filters)/shotbot_laser_filter/shotbot_laser_config.yaml" />
      <param name="use_hack" value="false"/>
  </node>

  <!-- Turtlebot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
    <?ignore
    <remap from="scan" to="$(arg scan_topic)"/>
    ?>
  </include>

  <?ignore
  <node pkg="tf" name="test1" type="static_transform_publisher" args="0 0 -0.65 3.14 3.14 0 base_link base_scan 100">
  </node>
  ?>

  <?ignore
  <node pkg="laser_scan_matcher" name="test" type="laser_scan_matcher_node">
      <param name="fixed_frame" value="world"/>
      <param name="base_frame" value="base_link"/>
  </node>
  ?>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>
    <remap from="scan" to="$(arg scan_topic)"/>

  <!-- AMCL -->
  <include file="$(find turtlebot3_navigation)/launch/amcl.launch"/>
    <?ignore
    <remap from="scan" to="$(arg scan_topic)"/>
    ?>

  <!-- move_base -->
  <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <?ignrore
    <remap from="scan" to="$(arg scan_topic)"/>
    ?>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation.rviz"/>
  </group>
</launch>
